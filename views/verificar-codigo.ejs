
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow">
        <div class="card-header bg-navy text-white text-center">
          <h4><i class="fas fa-shield-alt"></i> Verificar Código</h4>
        </div>
        <div class="card-body">
          <% if (error) { %>
            <div class="alert alert-danger">
              <i class="fas fa-exclamation-triangle"></i> <%= error %>
            </div>
          <% } %>

          <p class="mb-4">Digite o código de 6 dígitos que foi enviado para seu email:</p>
          
          <form method="POST">
            <div class="mb-3">
              <label for="code" class="form-label">Código de Verificação:</label>
              <input type="text" class="form-control text-center" id="code" name="code" 
                     maxlength="6" style="font-size: 1.5rem; letter-spacing: 0.2rem;" 
                     placeholder="ABC123" required>
            </div>
            
            <button type="submit" class="btn btn-navy w-100">
              <i class="fas fa-check"></i> Verificar Código
            </button>
          </form>
          
          <div class="text-center mt-3">
            <a href="/redefinir-senha" class="text-decoration-none">
              <i class="fas fa-arrow-left"></i> Solicitar Novo Código
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
// Converter código para maiúsculas automaticamente
document.getElementById('code').addEventListener('input', function(e) {
  e.target.value = e.target.value.toUpperCase();
});
</script>
